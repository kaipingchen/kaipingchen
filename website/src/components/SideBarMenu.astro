---
const { sideBarActiveItemID } = Astro.props;
const activeClass = "bg-base-300"; // For primary color replace with `active` class
const base_url = import.meta.env.BASE_URL;
---

<ul class="menu grow shrink menu-md overflow-y-auto w-[18rem]">
    <li><a class="py-3 text-base" id="home" href={base_url+"/"}>Home</a></li>
    <li><a class="py-3 text-base" id="research" href={base_url+"/research"}>Research</a></li>
    <li><a class="py-3 text-base" id="book" href={base_url+"/book"}>Book</a></li>
    <li><a class="py-3 text-base" id="cv" href={base_url+"/Kaiping_Chen_CV.pdf"}>CV</a></li>
    <li><a class="py-3 text-base" id="piano" href={base_url+"/piano/"}>Piano</a></li>
    <li><a class="py-3 text-base" id="chinese" href={base_url+"/chinese"}>中文</a></li>
    <li>
        <a
            class="py-3 text-base"
            href="mailto:kchen67@wisc.edu"
            target="_blank"
            referrerpolicy="no-referrer-when-downgrade">Email Me</a
        >
    </li>
</ul>

<script define:vars={{ sideBarActiveItemID: sideBarActiveItemID, activeClass: activeClass }}>
const activeItemElem = document.getElementById(sideBarActiveItemID);
activeItemElem && activeItemElem.classList.add(activeClass);
</script>
 